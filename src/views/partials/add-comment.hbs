<form class="box" action="/placemark/{{placemark._id}}/addcomment" method="POST">
  <label>Enter comment:</label>
        <textarea class="textarea" placeholder="Tell us what do you think about this place" name="description"></textarea>
    <p>Rating:</p>
    <div class="select is-primary">
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <button class="button is-primary">Add Comment</button>
</form>
