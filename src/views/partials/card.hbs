<div class="card">
  <div class="card-image">
    <figure class="image is-3by2">
      <img src='/images/places/{{placePicture}}' alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-96x96">
          <img class="is-rounded"src="../../images/accountphoto/{{pictureName}}" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">{{title}}</p>
          <p class="subtitle is-6">{{firstName}} {{lastName}}</p>
        <p class="subtitle is-6">@{{userid}}</p>
        <p class="title is-5"><i class="fas fa-map-marker-alt"></i> {{address}}</p>
      </div>
    </div>
      <br>
      <br>
      <hr>
    <div class="content">
      {{description}}
      <br>
      <br>
      <time class="is-2" datetime="2016-1-1">{{date}}- {{time}}</time>
        <br>
    </div>
  </div>
</div>